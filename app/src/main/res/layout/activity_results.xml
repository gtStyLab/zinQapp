<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ResultsActivity" >

        <TextView
            android:id="@+id/topgap"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="8pt" />

        <TextView
            android:id="@+id/topTitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/topgap"
            android:text="Results"
            android:layout_centerInParent="true"
            android:textSize="12pt" />

        <TextView
            android:id="@+id/firstspace"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/topTitle"
            android:text=""
            android:textSize="10pt" />

        <View
            android:id="@+id/finalcolor"
            android:layout_width="100px"
            android:layout_height="200px"
            android:layout_below="@+id/firstspace"
            android:layout_centerInParent="true"
            android:background="@drawable/rectangle"/>

        <TextView
            android:id="@+id/secondspace"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/finalcolor"
            android:text=""
            android:textSize="5pt" />

        <TextView
            android:id="@+id/colorScore"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/secondspace"
            android:text="5.0"
            android:layout_centerInParent="true"
            android:textSize="20pt" />

        <TextView
            android:id="@+id/thirdspace"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/colorScore"
            android:text=""
            android:textSize="2pt" />

        <TextView
            android:id="@+id/constantDescriptor"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/thirdspace"
            android:text="Color Score"
            android:layout_centerInParent="true"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/fourthspace"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/constantDescriptor"
            android:text=""
            android:textSize="10pt" />

        <TextView
            android:id="@+id/coordinates"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/fourthspace"
            android:text="(X, Y):"
            android:layout_centerInParent="true"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/fifthspace"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/coordinates"
            android:text=""
            android:textSize="7pt" />

        <TextView
            android:id="@+id/radius"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/fifthspace"
            android:text="Radius:"
            android:layout_centerInParent="true"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/fifthspace2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/radius"
            android:text=""
            android:textSize="7pt" />

        <TextView
            android:id="@+id/redvalue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/fifthspace2"
            android:text="Red:"
            android:textColor="#ff0000"
            android:layout_centerInParent="true"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/sixthspace"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/redvalue"
            android:text=""
            android:textSize="7pt" />

        <TextView
            android:id="@+id/greenvalue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/sixthspace"
            android:text="Green:"
            android:textColor="#008000"
            android:layout_centerInParent="true"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/seventhvalue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/greenvalue"
            android:text=""
            android:textSize="7pt" />

        <TextView
            android:id="@+id/bluevalue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/seventhvalue"
            android:text="Blue:"
            android:textColor="#0000ff"
            android:layout_centerInParent="true"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/eighthvalue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/bluevalue"
            android:text=""
            android:textSize="7pt" />

        <TextView
            android:id="@+id/level"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/eighthvalue"
            android:text="Level:"
            android:layout_centerInParent="true"
            android:textSize="9pt" />

    </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>